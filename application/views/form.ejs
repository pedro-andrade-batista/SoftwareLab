<!DOCTYPE html>
  <html lang="pt-br">
    <head>
      <meta charset="utf-8"/>
      <link rel="stylesheet" href="/css/style.css">
      <title>Cadastrar novo vacinado</title>
    </head>
  <body>
    <form class="box" action="form/register" method="POST">
        <div class="form-group">
          <label class="fontColor2" for="fullname">Nome completo</label>
          <input type="text" name = "fullname" class="form-control" id="fullname" placeholder="Type the fullname">
        </div>
        <div class="form-group">
          <label class="fontColor2" for="birthdate">Data de nascimento</label>
          <input type="text" name="birthdate" class="form-control" id="birthdate" placeholder="Type the birthdate">
        </div>
        <div class="form-group">
          <label class="fontColor2" for="suscard">Cart√£o do sus</label>
          <input type="text" name="suscard" class="form-control" id="suscard" placeholder="type the suscard">
        </div>
        <div class="form-group">
          <label class="fontColor2" for="first_vaccine">Vacina</label>
          <br/>
          <% if(vaccine.length > 0) { %> 
            <select name='first_vaccine' id='first_vaccine'>
              <% for(var i = 0; i < vaccine.length; i++) { %>
                <option value=<%= vaccine[i].id %>><%= vaccine[i].laboratory %></option>
              <% } %>
            </select>           
          <% } %>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <div class="box3">
          <a href='/'>Retornar para o menu principal</a>
        </div>
    </form>
  </body>
</html>
